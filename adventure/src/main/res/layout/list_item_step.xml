<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="15dp">

        <ImageView android:id="@+id/image_maneuver"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:scaleType="center"
            android:contentDescription="maneuver"
            android:src="@drawable/maneuver_right"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/direction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_direction"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>
            <TextView android:id="@+id/direction_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_direction_info"
                android:textColor="#CCC"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <CheckBox
            android:id="@+id/list_item_step_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>